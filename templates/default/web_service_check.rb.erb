#!/opt/chef/embedded/bin/ruby

require "net/http"

DIR = "<%= @resource.dir %>"
HOSTNAME = "<%= @resource.hostname %>"
PATH = "<%= @resource.path %>"

<% if @resource.match.is_a?(Regexp) %>
MATCH = /<%= @resource.match.to_s %>/
<% else %>
MATCH = "<%= @resource.match %>"
<% end %>

# -- Make sure our deploy dir exists -- #

if !Dir.exists?(DIR)
  $stderr.puts "Deploy directory does not exist."
  exit 2
end

# -- Test Web Response -- #

begin
  uri = URI("http://#{ HOSTNAME }#{ PATH || "/" }")
  Net::HTTP.start("127.0.0.1",80) do |http|
    request = Net::HTTP::Get.new uri.request_uri, "Host" => uri.host

    response = http.request request

    if response.is_a?(Net::HTTPNotFound)
      $stdout.puts "HTTP response was a 404"
      exit 2
    end

    if response.status == 200
      exit 0
    else
      $stdout.puts "HTTP Response was #{ response.status }."
      exit 2
    end
  end
rescue => e
  $stdout.puts "HTTP Request errored: #{ e }"
  exit 2
end


